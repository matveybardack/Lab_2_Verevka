<Window x:Class="WpfAppPredic.HelpWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Справка - Логический калькулятор"
        Height="600"
        Width="700"
        WindowStartupLocation="CenterOwner">
    <Window.Background>
        <ImageBrush ImageSource="/God2-Sistine_Chapel.png"
                    Opacity="0.14" />
    </Window.Background>
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0"
                   Text="Справка по работе с Логическим калькулятором"
                   Foreground="{StaticResource WhiteBrush}"
                   FontFamily="PT Sans"
                   FontSize="18"
                   FontWeight="Bold"
                   HorizontalAlignment="Center"
                   Margin="0,0,0,15" />

        <TabControl Grid.Row="1"
                    Background="Transparent"
                    BorderBrush="{StaticResource WhiteBrush}">

            <TabItem Header="Основы"
                     Style="{StaticResource DarkRedTabItemStyle}">
                <ScrollViewer>
                    <StackPanel Margin="10">
                        <TextBlock Text="Создание уравнений:"
                                   Foreground="{StaticResource WhiteBrush}"
                                   FontWeight="Bold"
                                   Margin="0,0,0,5" />
                        <TextBlock Text="1. Нажмите 'Добавить уравнение'"
                                   Foreground="{StaticResource WhiteBrush}"
                                   Margin="10,0,0,2" />
                        <TextBlock Text="2. Используйте кнопки для построения уравнения"
                                   Foreground="{StaticResource WhiteBrush}"
                                   Margin="10,0,0,2" />
                        <TextBlock Text="3. Нажмите 'Добавить' для включения в предикат"
                                   Foreground="{StaticResource WhiteBrush}"
                                   Margin="10,0,0,10" />

                        <TextBlock Text="Доступные операторы:"
                                   Foreground="{StaticResource WhiteBrush}"
                                   FontWeight="Bold"
                                   Margin="0,10,0,5" />
                        <TextBlock Text="• Математические: +, -, *, /"
                                   Foreground="{StaticResource WhiteBrush}"
                                   Margin="10,0,0,2" />
                        <TextBlock Text="• Сравнения: &lt;, &lt;=, ==, >=, >"
                                   Foreground="{StaticResource WhiteBrush}"
                                   Margin="10,0,0,2" />
                    </StackPanel>
                </ScrollViewer>
            </TabItem>

            <TabItem Header="Логика"
                     Style="{StaticResource DarkRedTabItemStyle}">
                <ScrollViewer>
                    <StackPanel Margin="10">
                        <!-- Содержимое для вкладки логики -->
                    </StackPanel>
                </ScrollViewer>
            </TabItem>

            <TabItem Header="Примеры"
                     Style="{StaticResource DarkRedTabItemStyle}">
                <ScrollViewer>
                    <StackPanel Margin="10">
                        <!-- Примеры предикатов -->
                    </StackPanel>
                </ScrollViewer>
            </TabItem>
        </TabControl>

        <Button Grid.Row="2"
                Content="Закрыть"
                Style="{StaticResource SquareButtonStyle}"
                Width="80"
                Height="30"
                HorizontalAlignment="Center"
                Margin="0,15,0,0"
                Click="CloseButton_Click" />
    </Grid>
</Window>