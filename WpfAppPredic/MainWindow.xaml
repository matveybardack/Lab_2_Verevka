<Window x:Class="WpfAppPredic.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:oxy="http://oxyplot.org/wpf"
        xmlns:local="clr-namespace:WpfAppPredic"
        mc:Ignorable="d"
        Title="Логический калькулятор"
        Height="600"
        Width="800"
        MinHeight="600"
        MinWidth="800"
        WindowStyle="ThreeDBorderWindow"
        Loaded="Window_Loaded">
    <Window.Background>
        <ImageBrush ImageSource="/God2-Sistine_Chapel.png"
                    Opacity="0.5" />
    </Window.Background>

    <!-- TabControl с двумя вкладками -->
    <TabControl Style="{StaticResource DarkRedTabControlStyle}"
                Margin="10">
        <TabItem Style="{StaticResource DarkRedTabItemStyle}"
                 Header="Редактор предиката">
            <Grid x:Name="ParentGrid">
                <Grid.Background>
                    <ImageBrush ImageSource="/God2-Sistine_Chapel.png"
                                Opacity="1" />
                </Grid.Background>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"></RowDefinition>
                    <RowDefinition Height="Auto"></RowDefinition>
                    <RowDefinition Height="Auto"></RowDefinition>
                    <RowDefinition Height="Auto"></RowDefinition>
                    <RowDefinition Height="Auto"></RowDefinition>
                    <RowDefinition Height="Auto"></RowDefinition>
                    <RowDefinition Height="Auto"></RowDefinition>
                </Grid.RowDefinitions>

                <Label Style="{StaticResource WhiteLabelStyle}"
                       Content="Предикат"
                       Grid.Row="0"
                       Margin="5,5,0,5"
                       HorizontalAlignment="Left">

                </Label>
                <Button x:Name="HelpButton"
                        Style="{StaticResource SquareButtonStyle}"
                        Content="?"
                        Height="30"
                        Width="30"
                        HorizontalAlignment="Right"
                        Margin="0, 0, 5, 5"
                        Click="HelpButton_Click" />

                <DockPanel Grid.Row="1">
                    <TextBox x:Name="PredicateTextBox"
                             Margin="5, 0, 0, 0"
                             Style="{StaticResource PlaceholderTextBoxStyle}"
                             Tag="Введите ваш предикат..."
                             Height="Auto"
                             TextWrapping="Wrap"
                             Width="Auto"
                             TextChanged="PredicateTextBox_TextChanged" />
                </DockPanel>

                <!-- Кнопка добавления уравнения - теперь она в отдельной строке -->
                <Button Style="{StaticResource SquareButtonStyle}"
                        x:Name="Button_AddEq"
                        Content="Добавить уравнение"
                        Width="160"
                        Height="30"
                        HorizontalAlignment="Left"
                        Margin="3,10,0,0"
                        Click="Button_AddEq_Click"
                        Grid.Row="2" />

                <Grid x:Name="GridAddEq"
                      Height="Auto"
                      Width="Auto"
                      HorizontalAlignment="Left"
                      Margin="3,0,0,0"
                      Visibility="Collapsed"
                      Grid.Row="3">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <TextBox x:Name="EquationTextBox"
                             TextWrapping="Wrap"
                             Style="{StaticResource PlaceholderTextBoxStyle}"
                             Tag="Введите ваше уравнение..."
                             Width="300"
                             Height="Auto"
                             HorizontalAlignment="Left"
                             Margin="0,10,0,0"
                             Grid.Row="0" />

                    <Label Style="{StaticResource WhiteLabelStyle}"
                           Content="Добавить переменную"
                           Margin="0,0,0,0"
                           Grid.Row="1" />

                    <Button Style="{StaticResource SquareButtonStyle}"
                            Content="X"
                            Width="40"
                            HorizontalAlignment="Left"
                            Margin="5,0,0,0"
                            Grid.Row="2"
                            Grid.Column="0"
                            Click="Button_Add_X_Click" />
                    <Button Style="{StaticResource SquareButtonStyle}"
                            Content="Y"
                            Width="38"
                            HorizontalAlignment="Left"
                            Margin="50,0,0,0"
                            Grid.Row="2"
                            Grid.Column="0"
                            Click="Button_Add_Y_Click" />
                    <Label Style="{StaticResource WhiteLabelStyle}"
                           Content="Добавить оператор"
                           Margin="0,0,0,0"
                           Grid.Row="3"
                           Width="Auto"
                           Height="Auto" />
                    <Button Style="{StaticResource SquareButtonStyle}"
                            Content="+"
                            Width="40"
                            Height="30"
                            HorizontalAlignment="Left"
                            Margin="5,0,0,0"
                            Grid.Row="4"
                            Grid.Column="0"
                            VerticalAlignment="Center"
                            Click="Button_Add_Plus_Click" />
                    <Button Style="{StaticResource SquareButtonStyle}"
                            Content="-"
                            Width="40"
                            Height="30"
                            HorizontalAlignment="Left"
                            Margin="50,0,0,0"
                            Grid.Row="4"
                            Grid.Column="0"
                            VerticalAlignment="Center"
                            Click="Button_Add_Minus_Click" />
                    <Button Style="{StaticResource SquareButtonStyle}"
                            Content="*"
                            Width="40"
                            Height="30"
                            HorizontalAlignment="Left"
                            Margin="95,0,0,0"
                            Grid.Row="4"
                            Grid.Column="0"
                            VerticalAlignment="Center"
                            Click="Button_Add_Multi_Click" />
                    <Button Style="{StaticResource SquareButtonStyle}"
                            Content="/"
                            Width="40"
                            Height="30"
                            HorizontalAlignment="Left"
                            Margin="140,0,0,0"
                            Grid.Row="4"
                            Grid.Column="0"
                            VerticalAlignment="Center"
                            Click="Button_Add_Div_Click" />
                    <Button Style="{StaticResource SquareButtonStyle}"
                            Content="// (DIV)"
                            Width="65"
                            Height="Auto"
                            HorizontalAlignment="Left"
                            Margin="185,0,0,0"
                            Grid.Row="4"
                            Grid.Column="0"
                            VerticalAlignment="Center"
                            Click="Button_Add_IntDiv_Click" />
                    <Button Style="{StaticResource SquareButtonStyle}"
                            Content="x²"
                            Width="40"
                            Height="Auto"
                            HorizontalAlignment="Left"
                            Margin="255,0,0,0"
                            Grid.Row="4"
                            Grid.Column="0"
                            VerticalAlignment="Center"
                            Click="Button_Add_Deg_Click" />
                    <Button Style="{StaticResource SquareButtonStyle}"
                            Content="% (MOD)"
                            Width="75"
                            Height="Auto"
                            HorizontalAlignment="Left"
                            Margin="300,0,0,0"
                            Grid.Row="4"
                            Grid.Column="0"
                            VerticalAlignment="Center"
                            Click="Button_Add_Mod_Click" />
                    <Button Style="{StaticResource SquareButtonStyle}"
                            Content="ABS"
                            Width="50"
                            Height="Auto"
                            HorizontalAlignment="Left"
                            Margin="380,0,0,0"
                            Grid.Row="4"
                            Grid.Column="0"
                            VerticalAlignment="Center"
                            Click="Button_Add_Abs_Click" />

                    <Label Style="{StaticResource WhiteLabelStyle}"
                           Content="Добавить оператор сравнения"
                           Margin="0,0,0,0"
                           Grid.Row="5"
                           Width="Auto"
                           Height="Auto" />
                    <Button Style="{StaticResource SquareButtonStyle}"
                            Content="&lt;"
                            Width="40"
                            Height="30"
                            HorizontalAlignment="Left"
                            Margin="5,0,0,0"
                            Grid.Row="6"
                            Grid.Column="0"
                            VerticalAlignment="Center"
                            Click="Button_Add_LowerThan_Click" />
                    <Button Style="{StaticResource SquareButtonStyle}"
                            Content="&lt;="
                            Width="40"
                            Height="30"
                            HorizontalAlignment="Left"
                            Margin="50,0,0,0"
                            Grid.Row="6"
                            Grid.Column="0"
                            VerticalAlignment="Center"
                            Click="Button_Add_LowerOrEqual_Click" />
                    <Button Style="{StaticResource SquareButtonStyle}"
                            Content="=="
                            Width="40"
                            Height="30"
                            HorizontalAlignment="Left"
                            Margin="95,0,0,0"
                            Grid.Row="6"
                            Grid.Column="0"
                            VerticalAlignment="Center"
                            Click="Button_Add_Equal_Click" />
                    <Button Style="{StaticResource SquareButtonStyle}"
                            Content="=>"
                            Width="40"
                            Height="30"
                            HorizontalAlignment="Left"
                            Margin="140,0,0,0"
                            Grid.Row="6"
                            Grid.Column="0"
                            VerticalAlignment="Center"
                            Click="Button_Add_BiggerOrEqual_Click" />
                    <Button Style="{StaticResource SquareButtonStyle}"
                            Content=">"
                            Width="40"
                            Height="30"
                            HorizontalAlignment="Left"
                            Margin="185,0,0,0"
                            Grid.Row="6"
                            Grid.Column="0"
                            VerticalAlignment="Center"
                            Click="Button_Add_Bigger_Click" />
                    <Button Style="{StaticResource SquareButtonStyle}"
                            Content="Добавить"
                            FontSize="14"
                            FontWeight="Bold"
                            Width="80"
                            Height="Auto"
                            HorizontalAlignment="Center"
                            Margin="150,10,0,0"
                            Grid.Row="7"
                            Grid.Column="0"
                            VerticalAlignment="Center"
                            Click="Button_Add_Eq_Click" />
                    <Button Style="{StaticResource SquareButtonStyle}"
                            Content="Отмена"
                            FontSize="14"
                            FontWeight="Bold"
                            Width="80"
                            Height="Auto"
                            HorizontalAlignment="Center"
                            Margin="325,10,0,0"
                            Grid.Row="7"
                            Grid.Column="0"
                            VerticalAlignment="Center"
                            Click="CancelEquation_Click" />
                </Grid>
                <Grid Grid.Row="4"
                      Margin="0, 10, 0, 0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <Label Style="{StaticResource WhiteLabelStyle}"
                           Content="Добавить логический оператор"
                           Margin="5,5,0,5"
                           HorizontalAlignment="Left"
                           Grid.Row="0"
                           Width="Auto"
                           Height="Auto" />
                    <Button Style="{StaticResource SquareButtonStyle}"
                            x:Name="Button_Logical_Not"
                            Content="! (NOT)"
                            Width="85"
                            Height="30"
                            HorizontalAlignment="Left"
                            Margin="5,0,0,0"
                            Grid.Row="1"
                            Grid.Column="0"
                            VerticalAlignment="Center"
                            Click="Button_Add_Not_Click" />
                    <Button Style="{StaticResource SquareButtonStyle}"
                            x:Name="Button_Logical_And"
                            Content="&amp;&amp; (AND)"
                            Width="105"
                            Height="Auto"
                            HorizontalAlignment="Left"
                            Margin="95,0,0,0"
                            Grid.Row="1"
                            Grid.Column="0"
                            VerticalAlignment="Center"
                            Click="Button_Add_And_Click" />
                    <Button Style="{StaticResource SquareButtonStyle}"
                            x:Name="Button_Logical_Or"
                            Content="|| (OR)"
                            Width="80"
                            Height="Auto"
                            HorizontalAlignment="Left"
                            Margin="205,0,0,0"
                            Grid.Row="1"
                            Grid.Column="0"
                            VerticalAlignment="Center"
                            Click="Button_Add_Or_Click" />
                    <Button Style="{StaticResource SquareButtonStyle}"
                            x:Name="Button_Logical_Imp"
                            Content="-> (IMP)"
                            Width="90"
                            Height="Auto"
                            HorizontalAlignment="Left"
                            Margin="290,0,0,0"
                            Grid.Row="1"
                            Grid.Column="0"
                            VerticalAlignment="Center"
                            Click="Button_Add_Imp_Click" />
                    <Button Style="{StaticResource SquareButtonStyle}"
                            x:Name="Button_Logical_Equiv"
                            Content="&lt;-> (EQUIV)"
                            Width="115"
                            Height="Auto"
                            HorizontalAlignment="Left"
                            Margin="385,0,0,0"
                            Grid.Row="1"
                            Grid.Column="0"
                            VerticalAlignment="Center"
                            Click="Button_Add_Equiv_Click" />
                    <Grid x:Name="LogicalOperatorsGrid"
                          Visibility="Collapsed"
                          Grid.Row="2">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"></RowDefinition>
                            <RowDefinition Height="Auto"></RowDefinition>
                        </Grid.RowDefinitions>
                        <Button Style="{StaticResource SquareButtonStyle}"
                                x:Name="CancelLogicalButton"
                                Content="Отмена"
                                Click="CancelLogical_Click"
                                Width="100"
                                Height="30"
                                Grid.Row="1"
                                Margin="110, 5, 0, 0"
                                HorizontalAlignment="Left" />
                        <ComboBox Style="{StaticResource DarkComboBoxStyle}"
                                  ItemContainerStyle="{StaticResource ComboBoxItemStyle}"
                                  x:Name="LogicalEquationsComboBox"
                                  Grid.Row="0"
                                  HorizontalAlignment="Left"
                                  Width="200"
                                  Height="30"
                                  Margin="5, 5, 0, 0" />
                        <Button Style="{StaticResource SquareButtonStyle}"
                                x:Name="AddLogicalOperatorButton"
                                Content="Добавить"
                                Click="AddLogicalOperatorButton_Click"
                                Width="100"
                                Height="30"
                                Grid.Row="1"
                                Margin="5, 5, 0, 0"
                                HorizontalAlignment="Left" />
                    </Grid>
                    <Label Style="{StaticResource WhiteLabelStyle}"
                           Content="Добавить квантор"
                           Margin="5,5,0,5"
                           HorizontalAlignment="Left"
                           Grid.Row="3"
                           Width="Auto"
                           Height="Auto" />
                    <Button Style="{StaticResource SquareButtonStyle}"
                            x:Name="Button_Add_Forall"
                            Content="∀ (FORALL)"
                            Width="115"
                            Height="29"
                            HorizontalAlignment="Left"
                            Margin="5,0,0,0"
                            Grid.Row="4"
                            Grid.Column="0"
                            VerticalAlignment="Center"
                            Click="Button_Add_Forall_Click"
                            IsEnabled="False" />
                    <Button Style="{StaticResource SquareButtonStyle}"
                            x:Name="Button_Add_Exists"
                            Content="∃ (EXISTS)"
                            Width="115"
                            Height="Auto"
                            HorizontalAlignment="Left"
                            Margin="125,0,0,0"
                            Grid.Row="4"
                            Grid.Column="0"
                            VerticalAlignment="Top"
                            Click="Button_Add_Exists_Click"
                            IsEnabled="False" />
                </Grid>
                <Grid x:Name="QuantifierGrid"
                      Visibility="Collapsed"
                      Grid.Row="5">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <Label Style="{StaticResource WhiteLabelStyle}"
                           Content="Выберите переменную, к которой будет применён квантор"
                           Grid.Row="0" />
                    <StackPanel Grid.Row="1"
                                Margin="5,0,0,0"
                                Orientation="Horizontal">
                        <RadioButton Style="{StaticResource WhiteRadioButtonStyle}"
                                     x:Name="RadioButtonX"
                                     Content="x"
                                     GroupName="VariableGroup"
                                     IsChecked="True"
                                     Margin="0,0,10,0" />
                        <RadioButton Style="{StaticResource WhiteRadioButtonStyle}"
                                     x:Name="RadioButtonY"
                                     Content="y"
                                     GroupName="VariableGroup"
                                     Margin="5,0,0,0" />
                    </StackPanel>
                    <Label Style="{StaticResource WhiteLabelStyle}"
                           Content="Выберите уравнение, к которому будет применён квантор"
                           Grid.Row="2" />
                    <ComboBox Style="{StaticResource DarkComboBoxStyle}"
                              ItemContainerStyle="{StaticResource ComboBoxItemStyle}"
                              x:Name="EquationsComboBox"
                              Grid.Row="3"
                              Margin="5,5,0,0"
                              HorizontalAlignment="Left"
                              Width="300"
                              SelectionChanged="EquationsComboBox_SelectionChanged" />

                    <Button Style="{StaticResource SquareButtonStyle}"
                            x:Name="AddQuantifierButton"
                            Content="Добавить"
                            Click="AddQuantifierButton_Click"
                            Grid.Row="4"
                            HorizontalAlignment="Center"
                            Margin="0,10,0,0" />
                    <Button Style="{StaticResource SquareButtonStyle}"
                            x:Name="CancelQuantifierButton"
                            Content="Отмена"
                            Click="CancelQuantifier_Click"
                            Grid.Row="4"
                            HorizontalAlignment="Center"
                            Margin="170,10,0,0"
                            Width="80" />
                </Grid>
                <Grid Grid.Row="6">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <!-- Левая часть - кнопка Рассчитать -->
                    <Button Style="{StaticResource SquareButtonStyle}"
                            x:Name="Button_Calculate"
                            Content="Рассчитать"
                            Width="120"
                            Height="35"
                            HorizontalAlignment="Left"
                            Margin="20,10,0,0"
                            VerticalAlignment="Top"
                            Click="Button_Calculate_Click"
                            Grid.Column="0" />

                    <!-- Правая часть - ползунки ограничений -->
                    <StackPanel Grid.Column="1"
                                Margin="20,10,20,0"
                                VerticalAlignment="Top">

                        <Label Style="{StaticResource WhiteLabelStyle}"
                               Content="Ограничения области построения:"
                               FontWeight="Bold"
                               Margin="0,0,0,0" />

                        <!-- Ограничения для X -->
                        <Grid Margin="0,0,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition></ColumnDefinition>
                                <ColumnDefinition></ColumnDefinition>
                            </Grid.ColumnDefinitions>
                            <Label Style="{StaticResource WhiteLabelStyle}"
                                   HorizontalAlignment="Left"
                                   Content="X min:"
                                   Width="80"
                                   VerticalAlignment="Center"
                                   Grid.Column="0" />
                            <Slider x:Name="XMinSlider"
                                    Margin="90, 0, 0, 0"
                                    HorizontalAlignment="Left"
                                    Minimum="-20"
                                    Maximum="20"
                                    Value="-10"
                                    Width="120"
                                    TickFrequency="2"
                                    TickPlacement="BottomRight"
                                    AutoToolTipPlacement="TopLeft"
                                    VerticalAlignment="Center"
                                    ValueChanged="RangeSlider_ValueChanged"
                                    Grid.Column="0" />
                            <TextBox x:Name="XMinTextBox"
                                     HorizontalAlignment="Left"
                                     Text="{Binding Value, ElementName=XMinSlider, StringFormat=N1}"
                                     Width="50"
                                     Height="30"
                                     Margin="220,0,0,0"
                                     Style="{StaticResource DarkTextBoxStyle}"
                                     TextAlignment="Center"
                                     Grid.Column="0" />
                            <Label Style="{StaticResource WhiteLabelStyle}"
                                   Content="X max:"
                                   Width="80"
                                   VerticalAlignment="Center"
                                   Grid.Column="1" />
                            <Slider x:Name="XMaxSlider"
                                    Minimum="-20"
                                    Maximum="20"
                                    Value="10"
                                    Width="120"
                                    TickFrequency="2"
                                    TickPlacement="BottomRight"
                                    AutoToolTipPlacement="TopLeft"
                                    VerticalAlignment="Center"
                                    ValueChanged="RangeSlider_ValueChanged"
                                    Grid.Column="1"
                                    Margin="90, 0, 0, 0"
                                    HorizontalAlignment="Left" />
                            <TextBox x:Name="XMaxTextBox"
                                     Text="{Binding Value, ElementName=XMaxSlider, StringFormat=N1}"
                                     Width="50"
                                     Height="30"
                                     Style="{StaticResource DarkTextBoxStyle}"
                                     TextAlignment="Center"
                                     Grid.Column="1"
                                     HorizontalAlignment="Left"
                                     Margin="220,0,0,0" />
                        </Grid>

                        <!-- Ограничения для Y -->
                        <Grid Margin="0,0,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition></ColumnDefinition>
                                <ColumnDefinition></ColumnDefinition>
                            </Grid.ColumnDefinitions>
                            <Label Style="{StaticResource WhiteLabelStyle}"
                                   Content="Y min:"
                                   Width="80"
                                   VerticalAlignment="Center"
                                   Grid.Column="0"
                                   HorizontalAlignment="Left"
                                   Margin="10,0,0,0" />
                            <Slider x:Name="YMinSlider"
                                    Minimum="-20"
                                    Maximum="20"
                                    Value="-10"
                                    Width="120"
                                    TickFrequency="2"
                                    TickPlacement="BottomRight"
                                    AutoToolTipPlacement="TopLeft"
                                    VerticalAlignment="Center"
                                    ValueChanged="RangeSlider_ValueChanged"
                                    Grid.Column="0"
                                    HorizontalAlignment="Left"
                                    Margin="90,0,0,0" />
                            <TextBox x:Name="YMinTextBox"
                                     Text="{Binding Value, ElementName=YMinSlider, StringFormat=N1}"
                                     Width="50"
                                     Height="30"
                                     Style="{StaticResource DarkTextBoxStyle}"
                                     TextAlignment="Center"
                                     Grid.Column="0"
                                     HorizontalAlignment="Left"
                                     Margin="220,0,0,0" />

                            <Label Style="{StaticResource WhiteLabelStyle}"
                                   Content="Y max:"
                                   Width="80"
                                   VerticalAlignment="Center"
                                   Grid.Column="1"
                                   HorizontalAlignment="Left"
                                   Margin="10,0,0,0" />
                            <Slider x:Name="YMaxSlider"
                                    Minimum="-20"
                                    Maximum="20"
                                    Value="10"
                                    Width="120"
                                    TickFrequency="2"
                                    TickPlacement="BottomRight"
                                    AutoToolTipPlacement="TopLeft"
                                    VerticalAlignment="Center"
                                    ValueChanged="RangeSlider_ValueChanged"
                                    Grid.Column="1"
                                    HorizontalAlignment="Left"
                                    Margin="90,0,0,0" />

                            <TextBox x:Name="YMaxTextBox"
                                     Text="{Binding Value, ElementName=YMaxSlider, StringFormat=N1}"
                                     Width="50"
                                     Height="30"
                                     Style="{StaticResource DarkTextBoxStyle}"
                                     TextAlignment="Center"
                                     Grid.Column="1"
                                     HorizontalAlignment="Left"
                                     Margin="220,0,0,0" />
                        </Grid>
                        <Label x:Name="RangeInfoText"
                                   Style="{StaticResource WhiteLabelStyle}"
                                   Content="Область построения: X ∈ [-10.0, 10.0], Y ∈ [-10.0, 10.0]"
                                   FontSize="20"
                                   Margin="0,10,0,0"
                                   />
                    </StackPanel>
                </Grid>
            </Grid>
        </TabItem>
        <TabItem Style="{StaticResource DarkRedTabItemStyle}"
                 Header="График">
            <Grid>
                <oxy:PlotView x:Name="TestModel" />
            </Grid>
        </TabItem>
    </TabControl>
</Window>